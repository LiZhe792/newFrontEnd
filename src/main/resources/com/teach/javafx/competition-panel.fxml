<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="800.0"
            fx:controller="com.teach.javafx.controller.CompetitionController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="5.0">
            <children>
                <FlowPane prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button mnemonicParsing="false"
                                onAction="#onAddButtonClick"
                                text="添加">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Button>
                        <Button mnemonicParsing="false"
                                onAction="#onDeleteButtonClick"
                                text="删除">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Button>
                    </children>
                </FlowPane>
                <Pane prefHeight="-1.0" prefWidth="-1.0" HBox.hgrow="ALWAYS" />
                <FlowPane alignment="TOP_RIGHT" prefHeight="40.0" prefWidth="400.0">
                    <children>
                        <Label prefWidth="49.0" text="竞赛名称">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Label>
                        <TextField fx:id="searchNameField" prefWidth="100.0">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </TextField>
                        <Button mnemonicParsing="false"
                                onAction="#onQueryButtonClick"
                                text="查询">
                            <FlowPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Button>
                    </children>
                </FlowPane>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
            </padding>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.7, 0.3">
            <items>
                <TableView fx:id="competitionTableView">
                    <columns>
                        <TableColumn fx:id="idColumn" prefWidth="60.0" text="ID" />
                        <TableColumn fx:id="subjectColumn" prefWidth="100.0" text="学科" />
                        <TableColumn fx:id="nameColumn" prefWidth="120.0" text="名称" />
                        <TableColumn fx:id="levelColumn" prefWidth="80.0" text="级别" />
                    </columns>
                </TableView>

                <VBox alignment="TOP_CENTER" spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <GridPane hgap="10.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" prefWidth="80.0" />
                            <ColumnConstraints prefWidth="200.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints prefHeight="30.0" />
                            <RowConstraints prefHeight="30.0" />
                            <RowConstraints prefHeight="30.0" />
                            <RowConstraints prefHeight="30.0" />
                        </rowConstraints>

                        <Label text="ID" GridPane.rowIndex="0" />
                        <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="0" editable="false" />

                        <Label text="学科" GridPane.rowIndex="1" />
                        <TextField fx:id="subjectField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="名称" GridPane.rowIndex="2" />
                        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="级别" GridPane.rowIndex="3" />
                        <TextField fx:id="levelField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                    </GridPane>

                    <FlowPane alignment="CENTER">
                        <Button onAction="#onSaveButtonClick" text="保存" />
                    </FlowPane>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>